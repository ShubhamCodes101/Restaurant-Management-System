<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RestoConnect</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="~/Home/Index" style="font-size:x-large; color:black; font-family:'Brush Script MT'; font-weight:700; font-size:xx-large">RestoConnect</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="~/Home/About" class=" active glyphicon glyphicon-info-sign" style="font-size:larger">About </a></li>
                <li><a href="~/Home/Contact" class=" active glyphicon glyphicon-globe" style="font-size:larger">Contact</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="@Url.Action("UserLogin", "Account", new { Role = "User"})" style="color:black; font-weight:600; font-size:x-large"><span class="glyphicon glyphicon-user"></span> User Login</a></li>
                <li><a href="@Url.Action("AdminLogin", "Account", new { Role = "Admin"})" style="color:black; font-weight:600; font-size:x-large"><span class="glyphicon glyphicon-log-in"></span> Admin Login</a></li>
                @*@Html.ActionLink("Admin Display", "Login", "Account", new { Role = "Admin" }, null)*@
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()


    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
