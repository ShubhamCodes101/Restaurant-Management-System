    <script>
        function getHistory() {
            $.ajax({
                type: 'GET',
                url: '/User/GetHistory2',
                //data: { city: $("#H1").val() },
                contentType: "application/json; charset=utf-8",
                dataType: 'json',
                success: function (data) {
                    console.log(data);
                    //alert("hii");
                    var tdata = $("#tblHistory tbody");
                    tdata.empty();
                    for (var i = 0; i < data.length; i++) {
                        var trow = "<tr>" +
                            "<td>" + data[i].Userid + "</td>" +
                            "<td>" + data[i].Rname + "</td>" +
                            "<td>" + data[i].Itemname + "</td>" +
                            "<td>" + data[i].Price + "</td>" +
                            "<td>" + data[i].Quantity + "</td>" +
                            "<td>" + data[i].Date + "</td>"

                        //"<td>" + "<img src=" + data[i].Picture + " width='70' height='70'/>" + "</td>"
                        //"<td>" + "<img src=" + data[i].Logo + " width='70' height='70'/>" + "</td>"
                        "</tr>";
                        tdata.append(trow);
                        //alert('Quantity Changed');
                        console.log(data);
                        //var url = '/User/MyHistory/';
                        //window.location = url;
                    }
                },
                error: function (res) {
                    alert('Something Went Wrong');
                    console.log(res);
                }
            });
        }
    </script>
